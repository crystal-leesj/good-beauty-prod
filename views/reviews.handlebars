<h1>Reviews on {{product.brand}} {{product.name}}:</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Comments</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each reviews}} 
        <tr>
            <td>name</td>
            <td>{{comment}}</td>
            {{!-- <td><button type="button" class="btn btn-info"><a href="/beauty/{{id}}">Update</a></button></td>
            <td><button type="button" class="btn btn-danger" onclick="deleteProduct({{id}})">Delete</button></td> --}}
        </tr>
        {{/each}}
    </tbody>
    <br>
    <button class="btn btn-default"><a href="/beauty">Go Back</a></button>
    <br>
</table>
<form id="addreview" class="form-horizontal" action="/beauty/reviews/{{product.id}}" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" for="brand">Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="name" placeholder="Enter Your Name" name="name">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="brand">Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" placeholder="Enter Password" name="password">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="brand">Comments:</label>
        <div class="col-sm-10">
            <input type="textarea" class="form-control" id="comment" placeholder="Enter comments" name="comment">
        </div>
    </div>
    <div class="form-group"> 
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>